{
  "name": "krama",
  "version": "1.0.0",
  "description": "Krama - A declarative, YAML-based workflow engine powered by Temporal for orchestrating complex workflows as DAGs",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start-worker": "tsx src/startWorkflow.ts start-worker",
    "start-workflow": "tsx src/startWorkflow.ts start-workflow",
    "dev": "tsx watch src/index.ts",
    "temporal:up": "docker-compose up -d",
    "temporal:down": "docker-compose down",
    "example:client": "tsx client/startExampleWorkflow.ts",
    "test": "vitest",
    "lint": "eslint src tests client",
    "lint:fix": "eslint src tests client --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "create-node": "tsx src/cli/create-node.ts"
  },
  "keywords": [
    "temporal",
    "workflow",
    "workflow-engine",
    "orchestration",
    "dag",
    "yaml",
    "typescript",
    "microservices",
    "automation",
    "pipeline"
  ],
  "author": "Krama Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaushiksamanta/Krama.git"
  },
  "bugs": {
    "url": "https://github.com/kaushiksamanta/Krama/issues"
  },
  "homepage": "https://github.com/kaushiksamanta/Krama#readme",
  "dependencies": {
    "@temporalio/activity": "^1.12.3",
    "@temporalio/client": "^1.12.3",
    "@temporalio/worker": "^1.12.3",
    "@temporalio/workflow": "^1.12.3",
    "dependency-graph": "^1.0.0",
    "lodash-es": "^4.17.23",
    "ms": "^2.1.3",
    "mustache": "^4.2.0",
    "yaml": "^2.5.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/ms": "^2.1.0",
    "@types/mustache": "^4.2.6",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "globals": "^17.2.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.9.2",
    "typescript": "^5.9.2",
    "vitest": "^4.0.9"
  }
}
