{
  "name": "temporal-workflow-engine",
  "version": "1.0.0",
  "description": "A declarative, YAML-based workflow engine powered by Temporal for orchestrating complex workflows as DAGs",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start-worker": "tsx src/startWorkflow.ts start-worker",
    "start-workflow": "tsx src/startWorkflow.ts start-workflow",
    "dev": "tsx watch src/index.ts",
    "temporal:up": "docker-compose up -d",
    "temporal:down": "docker-compose down",
    "example:client": "tsx client/startExampleWorkflow.ts",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "temporal",
    "workflow",
    "workflow-engine",
    "orchestration",
    "dag",
    "yaml",
    "typescript",
    "microservices",
    "automation",
    "pipeline"
  ],
  "author": "Temporal Workflow Engine Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/temporal-workflow-engine.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/temporal-workflow-engine/issues"
  },
  "homepage": "https://github.com/yourusername/temporal-workflow-engine#readme",
  "dependencies": {
    "@temporalio/activity": "^1.12.3",
    "@temporalio/client": "^1.12.3",
    "@temporalio/worker": "^1.12.3",
    "@temporalio/workflow": "^1.12.3",
    "dependency-graph": "^1.0.0",
    "mustache": "^4.2.0",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mustache": "^4.2.6",
    "@types/node": "^24.3.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.9.2",
    "typescript": "^5.9.2",
    "vitest": "^4.0.9"
  }
}
